<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/nama_minuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:hint="@string/nama_minuman"
            android:ems="10"
            android:background="#afffffff"

            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/harga_minuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#afffffff"
            android:ems="10"
            android:hint="@string/harga_minuman"
            android:inputType="number"

            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/kategori_minuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#afffffff"
            android:ems="10"
            android:hint="@string/kategori_minuman"
            android:inputType="text"

            >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>